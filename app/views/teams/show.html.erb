<div class="text-center">
  <h1><%= @team.name %></h1>
</div>
<div class="col-md-12">
  <div class="group">
    <%= link_to("创建项目", new_team_project_path(@team), class: "btn btn-danger pull-right") %>
  </div>
</div>
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>项目名称</td>
        <td>操作选项</td>
        <td>创建时间</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "project_item", :collection => @projects, :as => :project %>
    </tbody>
  </table>

  <div> 团队成员:
  <% @team.members.each do |user|%>
  <%= user.email %>
  <% end %>
  </div>
