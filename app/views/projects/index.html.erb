<div class="row">
  <% @projects.each do |project| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to project_path(project) do %>
      <%= project.title %>
      <%= link_to("编辑", edit_project_path(project), class: "btn btn-sm btn-success")%>
      <%= link_to("删除", project_path(project), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "确定吗"})%>
      <% end %>
    </div>
  <% end %>
    <div class="col-xs-6 col-md-3">
      <%= link_to("新建项目", new_project_path, class: "btn btn-danger" )%>
    </div>
</div>
